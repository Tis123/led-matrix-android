<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_music"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="bottom"
            tools:text="恋爱使用说明书"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#202020"/>
        <TextView
            android:id="@+id/tv_music_signer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="小缘 - 温柔的缘"
            android:textSize="12sp"
            android:textColor="#808080"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/iv_last_music"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_play_last"
            android:layout_gravity="start"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/img_play_start"
            android:layout_gravity="center"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_next_music"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_play_next"
            android:layout_gravity="end"
            android:contentDescription="@null" />
    </FrameLayout>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_close"
        android:contentDescription="@null" />
</LinearLayout>