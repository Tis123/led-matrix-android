<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/global_background">

    <include layout="@layout/layout_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_circle_10_white"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="当前状态："/>

        <com.literam.matrix.common.widget.DrawableTextView
            android:id="@+id/dtv_scroll_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            tools:text="未在滚动"
            android:textColor="#707070"
            android:textSize="16sp"
            android:drawablePadding="20dp"
            app:textImage="@drawable/img_refresh"
            app:textImageHeight="18dp"
            app:textImageWidth="18dp"
            app:textImageLocation="right"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_circle_10_white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="当前滚动速度："/>

        <com.literam.matrix.common.widget.DrawableTextView
            android:id="@+id/dtv_scroll_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            tools:text="0ms"
            android:textColor="#808080"
            android:textSize="15sp"
            android:drawablePadding="5dp"
            app:textImage="@drawable/img_arrow_right_grey"
            app:textImageHeight="18dp"
            app:textImageWidth="18dp"
            app:textImageLocation="right"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_circle_10_white"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="开机自动滚动"/>

        <CheckBox
            android:id="@+id/cb_run_on_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_circle_10_white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="滚动控制"/>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_10_blue"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="开始"/>
        <TextView
            android:id="@+id/tv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_10_blue"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="暂停"/>
        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_10_red"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="停止"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_circle_10_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" 滚动内容"
                android:textColor="#505050"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#808080"
                tools:text="（共0字）"/>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bg_circle_10_blue"
                android:text="发送数据"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_circle_5_grey"
            android:gravity="start"
            android:layout_gravity="bottom"
            android:hint="请输入滚动的内容..."
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColor="#505050"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>